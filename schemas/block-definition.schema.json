{
    "id": "http://www.webpipes.org/schemas/block-definition.json",
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "properties": {
        "name": {
            "id": "#name",
            "description": "The name for the Block.",
            "type": "string",
            "required": true
        },
        "url": {
            "id": "#url",
            "description": "The URL pointing to the Block endpoint.",
            "type": "string",
            "format": "uri",
            "required": true
        },
        "description": {
            "id": "#description",
            "description": "One or two sentences explaining what the Block does.",
            "type": "string",
            "required": true
        },
        "inputs": {
            "$ref": "http://www.webpipes.org/schemas/input-definition.json#inputs"
        },
        "outputs": {
            "$ref": "http://www.webpipes.org/schemas/output-definition.json#outputs"
        }
    }
}